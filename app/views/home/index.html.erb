
<%= form_for(@tweet = Tweet.new, :url => client_create_path) do |tweet_form| %>
    <div class="form-group">
      <%= tweet_form.text_area :tweet_content, :id => "tweet", class: "form-control", placeholder: "Enter Your tweet text here" %>
    </div>
    <div class="form-group">
      <%= tweet_form.submit "Post message to twitter" , class: "btn btn-lg btn-success"  %>
    </div>
<% end %>